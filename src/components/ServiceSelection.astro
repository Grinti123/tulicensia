                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="radio" name="tramite-persona" class="form-radio h-4 w-4 md:h-5 md:w-5 text-indigo-600" value="reciprocidad">
                  <span class="text-gray-700 text-sm md:text-base">Licencia de Reciprocidad</span>
                </label>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Trámites de vehículos details -->
      <div id="vehiculos-details" class="hidden opacity-0 transition-opacity duration-500 ease-in-out">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-8 items-center">
          <!-- Image and Text Column -->
          <div class="bg-[#f1f1ff] rounded-2xl p-4 md:p-6 flex flex-col">
            <div class="w-40 h-40 md:w-48 md:h-48 mb-3 md:mb-4 mx-auto">
