---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  ctaText?: string;
  ctaLink?: string;
  class?: string;
}

const { title, description, imageUrl, ctaText = "Â¡Iniciar ahora!", ctaLink = "#", class: className } = Astro.props;
---

<div class:list={["bg-[#f1f1ff] rounded-2xl p-4 lg:p-6 flex flex-col", className]}>
  <div class="w-40 h-40 lg:w-48 lg:h-48 mb-3 lg:mb-4 mx-auto">
    <dotlottie-player
      src={imageUrl}
      background="transparent"
      speed="1"
      style="width: 100%; height: 100%;"
      loop
      autoplay
    ></dotlottie-player>
  </div>

  <h3 class="text-lg lg:text-xl font-semibold text-gray-800 mt-2 lg:mt-4 mb-2 lg:mb-3">{title}</h3>
  <p class="text-gray-600 text-sm lg:text-base mb-4 lg:mb-6">
    {description}
  </p>

  <a href={ctaLink} class="inline-block bg-[#147A31] text-white py-2 lg:py-3 px-6 lg:px-8 rounded-full text-sm lg:text-base font-medium hover:bg-indigo-700 transition-colors text-center w-fit">
    {ctaText}
  </a>
</div>
